{% extends 'base.html.twig' %}

{% block title %}Producteurs
{% endblock %}

{% block body %}

	<div class="example-wrapper">
		<h1>Producteurs</h1>
		<hr>
		<div class="item-list">
			{% for producteur in producteurs %}
				<div class="item">

					<a href="{{path('producteur_detail', {'id': producteur.id})}}">
						<h2>{{producteur}}
							{{producteur.id}}</h2>
					</a>
					<h3>{{producteur.city}}</h3>


				</div>
			{% endfor %}
		</div>

		<h1>S'inscrire en tant que producteur</h1>

		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.firstname) }}
		{{ form_row(registrationForm.lastname) }}
		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.address) }}
		{{ form_row(registrationForm.city) }}
		{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

		{{ form_row(registrationForm.agreeTerms) }}

		<button type="submit" class="register-btn">Register</button>

		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
