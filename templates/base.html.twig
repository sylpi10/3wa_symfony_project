<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<header>
			<nav>
				<li>
					<a href="{{path('checkpoint')}}">Home</a>
				</li>

				<li>
					<a href="{{path("checkpoint")}}">Checkpoints</a>
				</li>
				<li>
					<a href="{{path("producteur")}}">Producteurs</a>
				</li>
				<li>
					<a href="">Inscription</a>
				</li>
				<li>
					{% if not app.user %}
						<a href="">Connexion</a>
					{% endif %}
				</li>

			</nav>
			{% block body %}{% endblock %}
		</body>
	</body>
</html>

<style>
	html,
	body {
		padding: 0;
		margin: 0;
	}
	nav {
		background-color: #333;
		margin-top: 0;
		padding: 8px;
		display: flex;
		justify-content: space-around;
		list-style-type: none;
	}

	nav li a {
		color: #ff4;
	}
	.example-wrapper {
		margin: 1em auto;
		max-width: 800px;
		width: 95%;
		font: 18px / 1.5 sans-serif;
	}
	.item-list {
		display: flex;
	}
	.item {
		width: 300px;
		border: solid 1px #ccc;
		padding: 20px;
		margin: 10px;
	}
	a {
		text-decoration: none;
		color: #4682B4;
	}
	a:hover {
		color: #6495ED
	}
	.price {
		color: #6495ed;
	}
	.add-to-cart {
		background-color: lightgreen;
		padding: 4px 12px;
		border-radius: 8px;
		border: none;
	}
</style>
